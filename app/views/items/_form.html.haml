= form_for @item, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= t("form.item.title")

    %div.control-group
      = f.label :name, :class => 'control-label'
      %div.controls
        = f.text_field :name, :class => 'text_field'

    %div.control-group
      = f.label :description, :class => 'control-label'
      %div.controls
        = f.text_area :description, :class => 'text_area', :rows => 5

    %div.control-group
      = f.label :serial, :class => 'control-label'
      %div.controls
        = f.text_field :serial, :class => 'text_field'

    %div.control-group
      = f.label :currency, :class => 'control-label'
      %div.controls
        = f.select :currency, @currencies

    %div.control-group
      = f.label :cost, :class => 'control-label'
      %div.controls
        = f.text_field :cost, :class => 'text_field'

    %div.control-group
      = f.label :purchased_from, :class => 'control-label'
      %div.controls
        = f.text_field :purchased_from, :class => 'text_field'

    %div.control-group
      = f.label :purchased_on, :class => 'control-label'
      %div.controls
        = f.text_field :purchased_on, :class => 'text_field'

    %div.control-group
      = f.label :brand, :class => 'control-label'
      %div.controls
        = f.text_field :brand_list, :class => 'text_field', :autocomplete => "off", :data => { :provide => "typeahead", :source => @brands.map(&:name) }

    %div.control-group
      = f.label :type, :class => 'control-label'
      %div.controls
        = f.text_field :type_list, :class => 'text_field', :autocomplete => "off", :data => { :provide => "typeahead", :source => @types.map(&:name) }

    %div.control-group
      = f.label :tags, :class => 'control-label'
      %div.controls
        = f.text_field :tag_list, :class => 'text_field', :autocomplete => "off", :data => { :provide => "typeahead", :source => @tags.map(&:name) }

    %div.form-actions
      = f.submit nil, :class => 'btn btn-primary'