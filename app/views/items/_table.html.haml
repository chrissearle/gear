%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th
        = t('item.list.name')
      %th
        = t('item.list.serial')
      %th
        = t('item.list.tags')
      %th= t('table.header.actions')

  %tbody
    - @items.each do |item|
      %tr
        %td
          = item.name
        %td
          = item.serial
        %td
          = item.all_tags
        %td
          = link_to t('button.show'), item_path(item), :class => 'btn btn-mini'
          = link_to t('button.edit'), edit_item_path(item), :class => 'btn btn-mini btn-warning'
          = link_to t('button.delete'), item_path(item), :method => 'delete', :confirm => t('show.delete.confirm'), :class => 'btn btn-mini btn-danger'