= form_for current_user, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= t("form.user.title")

    %div.control-group
      = f.label :email, :class => 'control-label'
      %div.controls
        = f.text_field :email, :class => 'text_field'

    %div.form-actions
      = f.submit nil, :class => 'btn btn-primary'
